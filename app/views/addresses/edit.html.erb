<h2>配送先編集</h2>
<%= form_with model:@address, url: address_path(@address),local:true, method: :patch do |f| %>
  　<table class="table table-borderless">
      <tr class="d-flex">
        <th class="col-3"><%= f.label :"郵便番号(ハイフンなし)" %></th>
        <td class="col-9"><%= f.text_field :postal_code %></td>
      </tr>
      <tr class="d-flex">
        <th class="col-3"><%= f.label :"住所" %></th>
        <td class="col-9"><%= f.text_field :address, size: 80 %></td>
      </tr>
      <tr class="d-flex">
        <th class="col-3"><%= f.label :"宛名" %></th>
        <td class="col-9"><%= f.text_field :name %></td>
      </tr>
　　</table>
  <div>
    <%= f.submit "変更内容を保存", class: "btn btn-success" %>
  </div>
<% end %>