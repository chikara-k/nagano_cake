<div class="container">
  <div class="row">
    <div class="col-8">
      <h3>新規会員登録</h3>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group m-1">
            <label class="form-control-plaintext">名前</label>
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
           </div>

          <div class="field m-1">
            <label class="form-control-plaintext">フリガナ</label>
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana, class: 'form-control' %>
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana, class: 'form-control' %>
          </div>

          <div class="field m-1">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="field m-1">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
            <%= f.text_field :postal_code, class: 'form-control' %>
          </div>

          <div class="field m-1">
            <%= f.label :address, "住所" %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>

          <div class="field m-1">
            <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
            <%= f.text_field :telephone_number, class: 'form-control' %>
          </div>

          <div class="field m-1">
            <%= f.label :password, "パスワード(6文字以上)" %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="field m-1">
            <%= f.label :password_confirmation, "パスワード(確認用)" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="actions m-1">
            <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
          </div>
      <% end %>
      <h4 class="m-3">既に登録済みの方</h4>
      <%= link_to "こちら",  new_customer_session_path %><span>からログインしてください。</span>
    </div>
  </div>
</div>