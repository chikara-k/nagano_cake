<div class = "container">
  <h2>商品編集</h2>
  <div class = "row">
    <div class="my-5">
    <%= form_with model:@item, url: admin_item_path(@item.id),local:true do |f| %>
      <table class="table table-borderless">
      <tr class="d-flex">
        <th class="col-6"><%= f.label :"商品画像" %></th>
        <td class="col-6"><%= f.attachment_field :image, class: " image" %></td>
      </tr>
      <%= render "item_form", f: f %>
    </table>
    <div class="mx-auto" style="width: 200px;">
      <%= f.submit "変更内容保存", class: "btn btn-success" %>
    </div>
    <% end %>
    </div>
  </div>
</div>